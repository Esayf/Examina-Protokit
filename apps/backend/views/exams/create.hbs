					type="text"
					id="questionText"
					name="questions[0][questionText]"
					required
				/>
				<h3>Options</h3>
				<div class="option">
					<label for="optionText1">Option 1 Text:</label>
					<input
						type="text"
						id="optionText1"
						name="questions[0][options][0][optionText]"
						required
					/>
				</div>
				<div class="option">
